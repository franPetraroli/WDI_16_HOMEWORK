<div class="row">
  <div class="col-md-12">
    <form action="/edit/<%= @result.id %>" method="post">
    <input type="hidden" name="_method" value="put">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="Title" name="title" value="<%= @result.title %>">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="author" value="<%= @result.author %>">
      </div>
      <div class="form-group">
        <label for="img">Img URL</label>
        <input type="text" class="form-control" id="img" name="img" value="<%= @result.image_url %>">
      </div>
      <div class="form-group">
        <label for="body">Example textarea</label>
        <textarea class="form-control" id="body" rows="10" name="body" ><%= @result.plot %></textarea>
      </div>
      <button>Save</button>
    </form>
  </div>
</div>