
<div class="row justify-content-center" id="result">
  <div class="col-md-4">
    <img src="<%= @result["Poster"]%>" alt="movie" id="movie-img">
  </div>
  <div class="col-md-6">
    <h1 id="title"><%= @result["Title"] %></h1>
    <p id="description">
    <%= @result["Plot"] %>
    </p>
    <p> <strong> Year:</strong> <%= @result["Year"] %></p>
    <p><strong> Runtime:</strong> <%= @result["Runtime"] %></p>
    <p><strong> Genre:</strong> <%= @result["Genre"] %></p>
    <p><strong> Actors:</strong> <%= @result["Actors"] %></p>
    <% if @result["Ratings"][0] %>
    <p><strong> IMdb:</strong> <%= @result["Ratings"][0]["Value"] %></p>
    <% end %>
  </div>
</div>